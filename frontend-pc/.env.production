# Production Environment Configuration for CT-Tibet-WMS Frontend
# Used for building and running the Vue 3 application in production

# Application Environment
NODE_ENV=production
VITE_APP_ENV=production

# API Server Configuration
# Base API URL for production backend service
VITE_API_BASE_URL=http://localhost:48888/api
VITE_API_TIMEOUT=30000

# Application Settings
VITE_APP_NAME=CT-Tibet-WMS
VITE_APP_VERSION=1.0.0
VITE_APP_TITLE=西藏电信仓库管理系统

# Authentication Settings
VITE_TOKEN_KEY=ct_wms_token
VITE_REFRESH_TOKEN_KEY=ct_wms_refresh_token
VITE_TOKEN_EXPIRE_TIME=7200000  # 2 hours in milliseconds

# Page Configuration
VITE_PAGE_SIZE=20
VITE_ENABLE_LOG=false

# Feature Flags
VITE_ENABLE_DEBUG=false
VITE_ENABLE_MOCK=false

# API Endpoints
VITE_LOGIN_URL=/api/auth/login
VITE_LOGOUT_URL=/api/auth/logout
VITE_USER_INFO_URL=/api/user/info
VITE_REFRESH_TOKEN_URL=/api/auth/refresh

# File Upload
VITE_UPLOAD_URL=/api/file/upload
VITE_MAX_FILE_SIZE=10485760  # 10MB in bytes
VITE_UPLOAD_TIMEOUT=60000  # 60 seconds

# Security
VITE_ENABLE_HTTPS=false  # Set to true if using HTTPS
VITE_SECURE_COOKIES=true
VITE_SAME_SITE_COOKIES=Lax

# Performance
VITE_LAZY_LOAD=true
VITE_ENABLE_COMPRESS=true

# Logging
VITE_LOG_LEVEL=error

# Build Configuration
VITE_LEGACY_BUILD=false

# WeChat Mini Program Configuration (if needed)
VITE_WECHAT_APP_ID=
VITE_WECHAT_API_BASE_URL=

# Third-party Services
VITE_ANALYTICS_ID=
VITE_SENTRY_DSN=
